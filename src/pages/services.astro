---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const servicesEntry = await getEntry('services', 'services');
const ongoing = servicesEntry.data.services.filter((s: any) => s.ongoing);
const past = servicesEntry.data.services.filter((s: any) => !s.ongoing);
---

<BaseLayout title="Services">
  <section class="py-12">
    <h1 class="text-3xl font-bold text-primary mb-8">Services</h1>

    <h2 class="text-lg font-semibold text-text mb-3">Ongoing</h2>
    <div class="space-y-3 mb-10">
      {ongoing.map((entry: any) => (
        <div class="bg-surface rounded-lg border border-border p-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
          <div>
            <p class="font-medium text-sm">{entry.name}</p>
            <p class="text-xs text-text-muted mt-1">{entry.role}</p>
          </div>
          <span class="text-xs text-accent whitespace-nowrap">{entry.period}</span>
        </div>
      ))}
    </div>

    <h2 class="text-lg font-semibold text-text mb-3">Past</h2>
    <div class="space-y-3">
      {past.map((entry: any) => (
        <div class="bg-surface rounded-lg border border-border p-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
          <div>
            <p class="font-medium text-sm">{entry.name}</p>
            <p class="text-xs text-text-muted mt-1">{entry.role}</p>
          </div>
          <span class="text-xs text-accent whitespace-nowrap">{entry.period}</span>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
