---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, getEntry, render } from 'astro:content';
import { selectedPubs } from '../data/publications';

const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const heroEntry = await getEntry('home', 'hero');
const aboutEntry = await getEntry('home', 'about');
const contactEntry = await getEntry('home', 'contact');

const { Content: HeroContent } = await render(heroEntry);
const { Content: AboutContent } = await render(aboutEntry);
const { Content: ContactContent } = await render(contactEntry);
---

<BaseLayout title="Home">

  <!-- Hero -->
  <section class="py-20 sm:py-28 text-center">
    <div class="relative w-40 mx-auto mb-6">
      <img
        src="https://www.gravatar.com/avatar/2e48799142b3ceb254000b2d6a802d3c?s=320"
        alt="Yusuke Izawa"
        class="w-40 h-40 rounded-full object-cover border-2 border-border"
      />
      <span class="absolute bottom-1 right-1 w-8 h-8 flex items-center justify-center rounded-full bg-black text-base" aria-hidden="true">☕</span>
    </div>
    <h1 class="text-4xl sm:text-5xl font-bold text-primary mb-4">{heroEntry.data.title}</h1>
    <p class="text-xl text-text-muted mb-4">{heroEntry.data.role}</p>
    <div class="text-lg text-text-muted leading-relaxed max-w-2xl mx-auto mb-8 [&>p]:mb-0">
      <HeroContent />
    </div>
    <div class="flex flex-wrap justify-center gap-4">
      <a href={`${base}publications/`} class="px-6 py-3 bg-primary text-bg rounded-lg font-medium hover:bg-primary-light transition-colors">
        Publications
      </a>
      <a href="https://www.yuiza.org/cv/yizawa.pdf" target="_blank" rel="noopener noreferrer" class="px-6 py-3 border-2 border-primary text-primary rounded-lg font-medium hover:bg-primary hover:text-bg transition-colors">
        CV
      </a>
      <a href="#contact" class="px-6 py-3 border-2 border-primary text-primary rounded-lg font-medium hover:bg-primary hover:text-bg transition-colors">
        Get in Touch
      </a>
    </div>
  </section>

  <!-- About -->
  <section id="about" class="py-16 scroll-mt-20 text-center">
    <h2 class="text-2xl font-bold text-primary mb-6">About</h2>
    <div class="max-w-3xl mx-auto">
      <div class="text-text-muted leading-relaxed mb-6 [&>p]:mb-0">
        <AboutContent />
      </div>
      <div class="grid sm:grid-cols-2 gap-4 text-left">
        <div class="bg-surface rounded-lg border border-border p-4">
          <h3 class="font-semibold mb-2">Research Interests</h3>
          <ul class="text-sm text-text-muted space-y-1">
            {aboutEntry.data.researchInterests.map((interest: string) => (
              <li>{interest}</li>
            ))}
          </ul>
        </div>
        <div class="bg-surface rounded-lg border border-border p-4">
          <h3 class="font-semibold mb-2">Education</h3>
          <ul class="text-sm text-text-muted space-y-1">
            {aboutEntry.data.education.map((edu: any) => (
              <li><strong>{edu.degree}</strong> {edu.field}, {edu.year}<br/>{edu.institution}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Selected Publications -->
  <section id="publications" class="py-16 scroll-mt-20 text-center">
    <h2 class="text-2xl font-bold text-primary mb-6">Selected Publications</h2>
    <div class="space-y-3 text-left">
      {selectedPubs.map(pub => (
        <div class="bg-surface rounded-lg border border-border p-4">
          <p class="font-medium text-sm leading-snug mb-1">{pub.title}</p>
          <p class="text-xs text-text-muted">{pub.authors}</p>
          <p class="text-xs text-accent font-medium mt-1">{pub.venue}, {pub.year}</p>
          <div class="flex gap-3 mt-2">
            {pub.doi && <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer" class="text-xs text-primary hover:underline">DOI</a>}
            {pub.arxiv && <a href={`https://arxiv.org/abs/${pub.arxiv}`} target="_blank" rel="noopener noreferrer" class="text-xs text-primary hover:underline">arXiv</a>}
            {pub.link && !pub.doi && <a href={pub.link} target="_blank" rel="noopener noreferrer" class="text-xs text-primary hover:underline">Link</a>}
          </div>
        </div>
      ))}
    </div>
    <a href={`${base}publications/`} class="inline-block mt-4 text-sm text-primary hover:underline">All publications →</a>
  </section>

  <!-- Blog -->
  <section id="blog" class="py-16 scroll-mt-20 text-center">
    <h2 class="text-2xl font-bold text-primary mb-6">Recent Posts</h2>
    {posts.length === 0 ? (
      <p class="text-text-muted">No posts yet.</p>
    ) : (
      <div class="grid gap-4 sm:grid-cols-2 text-left">
        {posts.map(post => (
          <a href={`${base}blog/${post.id.replace(/\.mdx?$/, '')}/`} class="block bg-surface rounded-lg border border-border p-4 hover:border-primary/50 transition-colors">
            <time class="text-xs text-text-muted">
              {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
            <h3 class="font-semibold mt-1 mb-1">{post.data.title}</h3>
            <p class="text-sm text-text-muted">{post.data.description}</p>
          </a>
        ))}
      </div>
    )}
    <a href={`${base}blog/`} class="inline-block mt-4 text-sm text-primary hover:underline">All posts →</a>
  </section>

  <!-- Contact -->
  <section id="contact" class="py-16 scroll-mt-20 text-center">
    <h2 class="text-2xl font-bold text-primary mb-6">Contact</h2>
    <div class="grid sm:grid-cols-2 gap-6 max-w-3xl mx-auto text-left">
      <div class="bg-surface rounded-lg border border-border p-5">
        <h3 class="font-semibold mb-3">Get in Touch</h3>
        <ul class="text-sm text-text-muted space-y-2">
          <li><span class="font-medium text-text">Email:</span> <a href={`mailto:${contactEntry.data.email}`} class="text-accent hover:underline">{contactEntry.data.email}</a></li>
          <li><span class="font-medium text-text">Web:</span> <a href={contactEntry.data.web} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">{contactEntry.data.web.replace('https://', '')}</a></li>
          <li><span class="font-medium text-text">GitHub:</span> <a href={`https://github.com/${contactEntry.data.github}`} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">{contactEntry.data.github}</a></li>
        </ul>
      </div>
      <div class="bg-highlight rounded-lg border border-primary/30 p-5">
        <h3 class="font-semibold text-primary mb-3">Open Positions</h3>
        <div class="text-sm text-text-muted leading-relaxed [&>p]:mb-0">
          <ContactContent />
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
