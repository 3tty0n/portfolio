---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allSupervision = await getCollection('supervision');

const levels = [
  { key: 'phd', label: 'PhD Students', topicLabel: 'Topic' },
  { key: 'masters', label: "Master's Students", topicLabel: 'Thesis' },
  { key: 'bachelors', label: "Bachelor's Students", topicLabel: 'Project' },
] as const;
---

<BaseLayout title="Supervision">
  <section class="py-12">
    <h1 class="text-3xl font-bold text-primary mb-8">Supervision &amp; Mentoring</h1>

    {levels.map(({ key, label, topicLabel }) => {
      const entries = allSupervision.filter(e => e.data.level === key);
      return entries.length > 0 && (
        <>
          <h2 class="text-lg font-semibold text-text mb-3">{label}</h2>
          <div class="space-y-3 mb-10">
            {entries.map(entry => (
              <div class="bg-surface rounded-lg border border-border p-4">
                <p class="font-medium text-sm">{entry.data.name}</p>
                <p class="text-xs text-text-muted mt-1">{topicLabel}: {entry.data.topic}</p>
                <p class="text-xs text-accent mt-1">{entry.data.period}</p>
              </div>
            ))}
          </div>
        </>
      );
    })}
  </section>
</BaseLayout>
